<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".BeforeCameraActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/illust"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_230sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        app:lottie_autoPlay="true"
        app:lottie_imageAssetsFolder="images"
        app:lottie_fileName="8493-qr-code-scan.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/_12sdp"
        android:textAlignment="center"
        android:text="Sebelum menggunakan fitur pemindai AR, pengguna diharapkan berada di ruangan dengan pencahayaan yang baik dan memindai marker pada bagian yang tepat."
        app:layout_constraintTop_toBottomOf="@id/illust"
        app:layout_constraintStart_toStartOf="@id/illust"
        app:layout_constraintEnd_toEndOf="@id/illust"
        android:layout_marginTop="@dimen/_20sdp"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/button_lanjutkan"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_38sdp"
        android:backgroundTint="@color/button"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Lanjutkan"
        app:shapeAppearanceOverlay="@style/shapeButton"
        android:textAlignment="center"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/roboto"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>